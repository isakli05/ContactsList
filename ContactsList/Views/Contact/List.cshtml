
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    ViewBag.Title = "Kişiler Listesi";
}
<link href="~/Content/Boostrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/js/bootstrap.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@model IEnumerable<DAL.ORM.Entity.Contact>

<div class="table-responsive rounded" style="margin-top:50px">
    <div class="col-md-12">
        <table class="table table-hover table-bordered bg-light">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Şirket</th>
                    <th>Telefon</th>
                    <th>Mail</th>

                </tr>
            </thead>
            <tbody style="cursor:pointer">
                @foreach (var item in Model)
                {

                    <tr class="table-row" data-href="/Contact/ContactDetail/@item.ID">
                        <td>@item.Name</td>
                        <td>@item.SurName</td>
                        <td>@item.Company</td>
                        <td>@item.Phone</td>
                        <td>@item.Mail</td>
                    </tr>

                }
            </tbody>
        </table>
        <a href="/Contact/Add" class="btn btn-warning">Yeni Kişi Ekle</a>
    </div>

</div>
<script type="text/javascript">
    $(document).ready(function ($) {
        $(".table-row").click(function () {
            window.document.location = $(this).data("href");
        });
    });
</script>